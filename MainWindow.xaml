<Window x:Class="_07_WPFNotePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_WPFNotePad"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Background="#FF56A3DC">
            <MenuItem Header="File">
                <MenuItem Name="MenuItem_Open" Header="Open" Click="MenuItem_Open_Click"></MenuItem>
                <MenuItem Name="MenuItem_Save" Header="Save" Click="MenuItem_Save_Click"></MenuItem>
                <MenuItem Name="MenuItem_Exit" Header="Exit" Click="MenuItem_Exit_Click"></MenuItem>
            </MenuItem>

        </Menu>
        <TextBox x:Name="textBox_Editor" TextWrapping="Wrap" Margin="0,21,-0.333,-0.333" AcceptsReturn="True" AcceptsTab="True"/>
    </Grid>
</Window>
